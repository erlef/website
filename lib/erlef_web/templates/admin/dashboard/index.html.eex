                    "Unapproved Job Posts",
                    "fa-file-user",
                      Routes.admin_job_path(@conn, :index),
                      "warning")
  %>

  <%= small_info_box(@resource_counts.unapproved_events_count, 
                    "Unapproved Events", 
                    "fa-calendar-alt",  
                      Routes.admin_event_path(@conn, :index), 
