<div class="container">
    <div class="">
        <div class="row align-items-stretch">
            <%= for story <- @latest_news do %>
                <div class="col-lg-4 d-flex flex-column justify-content-between">
                    <div>
                        <h6 class=""><%= String.capitalize(story.category) %></h6>
                        <h4 class=""><%= link(story.title, to: "/news/eef/#{story.slug}") %></h4>
                    </div>
                    <div class="d-flex align-items-center mt-4">
                        <div class="avatar mr-2 rounded-circle">
                            <img class="img-fluid" src="<%= Routes.static_path(@conn, "/images/eef-avatar.png") %>" />
                        </div>
                        <div>
                            <div><%= long_date(story.datetime) %></div>
                            <div>by <%= story.author %></div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
